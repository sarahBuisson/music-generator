{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "lib": ["es2017", "dom"],
    "suppressImplicitAnyIndexErrors": true,
    "removeComments": true,
    "noImplicitAny": false,
    "baseUrl": "./src",
    "moduleResolution": "node"
  },
  "files": [
    "src/index.ts",
    "src/utils.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ],
  "exclude": ["node_modules", "dist", "example"]
}
